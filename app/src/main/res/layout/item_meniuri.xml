<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_nume"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/shape_border"
        android:backgroundTint="@color/white_chocolate"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_mesaj"
        android:layout_width="350dp"
        android:layout_height="75dp"
        android:background="@drawable/shape_border"
        android:backgroundTint="@color/tea_green"
        android:text="TextView"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nume" />

    <TextView
        android:id="@+id/tv_data"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:background="@drawable/shape_border"
        android:backgroundTint="@color/tea_green"
        android:text="TextView"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_mesaj"
        app:layout_constraintTop_toBottomOf="@+id/tv_nume" />
</androidx.constraintlayout.widget.ConstraintLayout>